<UserControl x:Class="SipLine.Plugin.Recordings.RecordingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SipLine.Plugin.Recordings"
             Background="Transparent"
             MinWidth="400">

    <UserControl.Resources>
        <!-- Convertisseurs -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <local:ZeroToVisibilityConverter x:Key="ZeroToVisibility"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibility"/>

        <!-- Style bouton action -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style filtre -->
        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#A0A0A0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource WpfSurfaceBrush}" BorderBrush="{DynamicResource WpfBorderBrush}" BorderThickness="0,0,0,1" Padding="16">
            <DockPanel>
                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                    <TextBlock Text="{Binding TotalCount}"
                               Foreground="{DynamicResource WpfMutedBrush}" FontSize="12" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding TotalSize}"
                               Foreground="{DynamicResource WpfMutedBrush}" FontSize="12" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <Button Command="{Binding OpenFolderCommand}" Style="{StaticResource ActionButton}" ToolTip="{Binding [OpenFolder]}">
                        <Path Data="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"
                              Stroke="{DynamicResource WpfMutedBrush}" StrokeThickness="1.5" Width="18" Height="18" Stretch="Uniform"/>
                    </Button>
                    <Button Command="{Binding RefreshCommand}" Style="{StaticResource ActionButton}" ToolTip="{Binding [Refresh]}" Margin="4,0,0,0">
                        <Path Data="M21 12a9 9 0 0 0-9-9 9.75 9.75 0 0 0-6.74 2.74L3 8m0-5v5h5m-5 4a9 9 0 0 0 9 9 9.75 9.75 0 0 0 6.74-2.74L21 16m0 5v-5h-5"
                              Stroke="{DynamicResource WpfMutedBrush}" StrokeThickness="1.5" Width="18" Height="18" Stretch="Uniform"/>
                    </Button>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="{Binding [Title]}" Foreground="{DynamicResource WpfTextBrush}" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding [Subtitle]}" Foreground="{DynamicResource WpfMutedBrush}" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Filtres -->
        <Border Grid.Row="1" Background="{DynamicResource WpfBaseBrush}" BorderBrush="{DynamicResource WpfBorderBrush}" BorderThickness="0,0,0,1" Padding="16,12">
            <DockPanel>
                <!-- Recherche -->
                <Border DockPanel.Dock="Right" Background="{DynamicResource WpfInputBrush}" BorderBrush="{DynamicResource WpfBorderBrush}" BorderThickness="1" CornerRadius="4" Padding="8,4" Width="150">
                    <DockPanel>
                        <Path DockPanel.Dock="Left" Data="M21 21l-6-6m2-5a7 7 0 1 1-14 0 7 7 0 0 1 14 0z"
                              Stroke="{DynamicResource WpfMutedBrush}" StrokeThickness="1.5" Width="14" Height="14" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent" BorderThickness="0" Foreground="{DynamicResource WpfTextBrush}"
                                 CaretBrush="{DynamicResource WpfTextBrush}"
                                 VerticalAlignment="Center"/>
                    </DockPanel>
                </Border>

                <!-- Filtres période -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="{Binding [All]}" Command="{Binding SetFilterCommand}" CommandParameter="all">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FilterPeriod}" Value="all">
                                        <Setter Property="Background" Value="{DynamicResource WpfAccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="{Binding [Today]}" Command="{Binding SetFilterCommand}" CommandParameter="today">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FilterPeriod}" Value="today">
                                        <Setter Property="Background" Value="{DynamicResource WpfAccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="{Binding [ThisWeek]}" Command="{Binding SetFilterCommand}" CommandParameter="week">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FilterPeriod}" Value="week">
                                        <Setter Property="Background" Value="{DynamicResource WpfAccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="{Binding [ThisMonth]}" Command="{Binding SetFilterCommand}" CommandParameter="month">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource FilterButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding FilterPeriod}" Value="month">
                                        <Setter Property="Background" Value="{DynamicResource WpfAccentBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Liste des enregistrements -->
        <Border Grid.Row="2" Background="{DynamicResource WpfBaseBrush}">
            <Grid>
                <!-- Loading -->
                <TextBlock Text="{Binding [Loading]}" Foreground="{DynamicResource WpfMutedBrush}" FontSize="14"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}"/>

                <!-- Liste vide -->
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                            Visibility="{Binding FilteredRecordings.Count, Converter={StaticResource ZeroToVisibility}, FallbackValue=Collapsed}">
                    <Path Data="M17.5 22h.5a2 2 0 0 0 2-2V7l-5-5H6a2 2 0 0 0-2 2v3m0 12v-6a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v6"
                          Stroke="{DynamicResource WpfBorderBrush}" StrokeThickness="2" Width="48" Height="48" Stretch="Uniform" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding [NoRecordings]}" Foreground="{DynamicResource WpfMutedBrush}" FontSize="14" Margin="0,16,0,4" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding [NoRecordingsDesc]}" Foreground="{DynamicResource WpfMutedBrush}" FontSize="12" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Liste -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilteredRecordings}" Padding="8">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource WpfSurfaceBrush}" CornerRadius="8" Margin="8,4" Padding="12"
                                        BorderBrush="{DynamicResource WpfBorderBrush}" BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="44"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Border Grid.Column="0" Width="36" Height="36" CornerRadius="18"
                                                Background="{DynamicResource WpfInputBrush}" BorderBrush="{DynamicResource WpfBorderBrush}" BorderThickness="1">
                                            <TextBlock Text="{Binding Initial}" Foreground="{DynamicResource WpfMutedBrush}"
                                                       FontSize="14" FontWeight="Bold"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Infos -->
                                        <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding DisplayName}" Foreground="{DynamicResource WpfTextBrush}" FontSize="13" FontWeight="Medium"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="{Binding DateDisplay}" Foreground="{DynamicResource WpfMutedBrush}" FontSize="11"/>
                                                <TextBlock Text=" • " Foreground="{DynamicResource WpfBorderBrush}" FontSize="11"/>
                                                <TextBlock Text="{Binding DurationDisplay}" Foreground="{DynamicResource WpfMutedBrush}" FontSize="11"/>
                                                <TextBlock Text=" • " Foreground="{DynamicResource WpfBorderBrush}" FontSize="11"/>
                                                <TextBlock Text="{Binding FileSizeDisplay}" Foreground="{DynamicResource WpfMutedBrush}" FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Bouton Play/Stop -->
                                        <Button Grid.Column="2"
                                                Command="{Binding DataContext.PlayCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButton}" ToolTip="{Binding DataContext[Play], RelativeSource={RelativeSource AncestorType=ItemsControl}}" Margin="8,0">
                                            <Button.Visibility>
                                                <Binding Path="IsPlaying">
                                                    <Binding.Converter>
                                                        <local:InverseBoolToVisibilityConverter/>
                                                    </Binding.Converter>
                                                </Binding>
                                            </Button.Visibility>
                                            <Path Data="M5 3l14 9-14 9V3z" Fill="{DynamicResource WpfAccentBrush}" Width="16" Height="16" Stretch="Uniform"/>
                                        </Button>
                                        <Button Grid.Column="2"
                                                Command="{Binding DataContext.StopCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                Style="{StaticResource ActionButton}" ToolTip="{Binding DataContext[Stop], RelativeSource={RelativeSource AncestorType=ItemsControl}}" Margin="8,0"
                                                Visibility="{Binding IsPlaying, Converter={StaticResource BoolToVisibility}}">
                                            <Path Data="M6 4h4v16H6V4zm8 0h4v16h-4V4z" Fill="{DynamicResource WpfDangerBrush}" Width="16" Height="16" Stretch="Uniform"/>
                                        </Button>

                                        <!-- Bouton Email -->
                                        <Button Grid.Column="3"
                                                Command="{Binding DataContext.EmailCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButton}" ToolTip="{Binding DataContext[Email], RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                            <Path Data="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2zm16 2l-8 5-8-5"
                                                  Stroke="{DynamicResource WpfMutedBrush}" StrokeThickness="1.5" Width="16" Height="16" Stretch="Uniform"/>
                                        </Button>

                                        <!-- Bouton Export -->
                                        <Button Grid.Column="4"
                                                Command="{Binding DataContext.ExportCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButton}" ToolTip="{Binding DataContext[Export], RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                            <Path Data="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4m4-5l5 5 5-5m-5 5V3"
                                                  Stroke="{DynamicResource WpfMutedBrush}" StrokeThickness="1.5" Width="16" Height="16" Stretch="Uniform"/>
                                        </Button>

                                        <!-- Bouton Supprimer -->
                                        <Button Grid.Column="5"
                                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource ActionButton}" ToolTip="{Binding DataContext[Delete], RelativeSource={RelativeSource AncestorType=ItemsControl}}">
                                            <Path Data="M3 6h18m-2 0v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"
                                                  Stroke="{DynamicResource WpfDangerBrush}" StrokeThickness="1.5" Width="16" Height="16" Stretch="Uniform"/>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</UserControl>
